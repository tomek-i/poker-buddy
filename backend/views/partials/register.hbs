<!-- Default form login -->
<div class="row" style="justify-content: space-around;">
    <form action="auth/register" method="post" class="text-center border border-dark mt-5 p-5">

        <p class="h4 mb-4">Register a new Account</p>

        <!-- Firstname -->
        <input id="firstname" name="firstname" type="firstname" class="form-control mb-4" placeholder="First Name">
        <!-- Lastname -->
        <input id="lastname" name="lastname" type="lastname" class="form-control mb-4" placeholder="Last Name">

        <!-- Email -->
        <input id="email" name="email" type="email" class="form-control mb-4" placeholder="email" required>

        <!-- Username -->
        <input id="username" name="username" type="username" class="form-control mb-4" placeholder="Username" required>

        <!-- Password -->
        <input type="password" name="password" id="password" class="form-control mb-4" placeholder="Password" required>



        <!-- Sign in button -->
        <button class="btn btn-info btn-block my-4" type="submit">Register</button>

        <!-- Register -->
        <p>Already have an account?
            <a href="/login">Login</a>
        </p>


    </form>
    <!-- Default form login -->
</div>